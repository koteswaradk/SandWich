<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/titlebar"
            style="@style/TitleBar_style"
            android:layout_width="wrap_content"
            android:text="@string/loginhead" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="visible" >

        <Button
            android:id="@+id/button_inpremisis_login"
            style="@style/actionbutton_style_changeorder"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:layout_marginTop="12dp"
            android:text="@string/inpremisislogin" />

        <Button
            android:id="@+id/button_salesgirls_login"
            style="@style/actionbutton_style"
            android:layout_below="@+id/button_inpremisis_login"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:layout_marginTop="12dp"
            android:text="@string/salesgirlslogin" />

        
    </RelativeLayout>

</LinearLayout>