<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/titlebar"
            style="@style/TitleBar_style_large"
            android:text="@string/syncdata" />

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="02dp"
            android:layout_marginTop="05dp"
            android:visibility="visible"
            android:background="@drawable/homebuttonselection" />

       
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

       
        <Button
            android:layout_marginTop="250dp"
            android:id="@+id/button_synch"
            style="@style/actionbutton_style_large"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
            android:textSize="35sp"
            android:text="@string/syncdata"
           />

      <ImageView
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_alignLeft="@+id/button_synch"
          android:layout_alignTop="@+id/button_synch"
          android:layout_marginLeft="53dp"
          android:background="@drawable/synch" />
     
    </RelativeLayout>

</LinearLayout>