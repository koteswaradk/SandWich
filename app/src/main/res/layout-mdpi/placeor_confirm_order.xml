<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/titlebar"
            style="@style/TitleBar_style"
            android:layout_width="wrap_content"
            android:text="@string/details" />

        <ImageButton
            android:id="@+id/button_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="02dp"
            android:layout_marginTop="05dp"
            android:background="@drawable/homebuttonselection"
            android:visibility="visible" />

   
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

        <TextView
            android:id="@+id/name1"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:text="sample code to test in the text" />

        <TextView
            android:id="@+id/value1"
            style="@style/TextViewStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/name1"
            android:text="100000" />

         <TextView
             android:id="@+id/name2"
             style="@style/TextViewStyle"
             android:layout_alignParentLeft="true"
             android:layout_alignRight="@+id/name1"
             android:layout_below="@id/name1"
             android:text="sample code to test in the text" />

        <TextView
            android:id="@+id/value2"
            style="@style/TextViewStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/name1"
            android:layout_toRightOf="@id/name2"
            android:text="100000" />

        <TextView
            android:id="@+id/name3"
            style="@style/TextViewStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/name2"
            android:layout_below="@id/name2"
            android:text="sample code to test in the text" />

        <TextView
            android:id="@+id/value3"
           	style="@style/TextViewStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/name2"
            android:layout_toRightOf="@id/name3"
            android:text="100000" />

        <TextView
            android:id="@+id/name4"
            style="@style/TextViewStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/name2"
            android:layout_below="@id/name3"
            android:text="sample code to test in the text" />

        <TextView
            android:id="@+id/value4"
            style="@style/TextViewStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/name3"
            android:layout_toRightOf="@id/name4"
            android:text="100000" />

       <TextView
           android:id="@+id/name5"
           style="@style/TextViewStyle"
           android:layout_alignParentLeft="true"
           android:layout_alignRight="@+id/name4"
           android:layout_below="@id/name4"
           android:text="sample code to test in the text" />

         <TextView
            android:id="@+id/value5"
            style="@style/TextViewStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/name4"
            android:layout_toRightOf="@id/name5"
            android:text="100000" />
         <TextView
           android:id="@+id/name6"
           style="@style/TextViewStyle"
           android:layout_alignParentLeft="true"
           android:layout_alignRight="@+id/name5"
           android:layout_below="@id/name5"
           android:text="sample code to test in the text" />

         <TextView
            android:id="@+id/value6"
            style="@style/TextViewStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/name5"
            android:layout_toRightOf="@id/name6"
            android:text="100000" />  
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="05dp"
        android:visibility="visible" >

        <EditText
            android:id="@+id/date"
            style="@style/EditTextStyle1"
            android:hint="Date"
            android:gravity="left"
            android:inputType="date" >

        </EditText>

        <EditText
            android:id="@+id/time"
            style="@style/EditTextStyle1"
            android:layout_toRightOf="@+id/date"
            android:hint="Time"
            android:gravity="left"
            android:inputType="time" >

        </EditText>

        <EditText
            android:id="@+id/questioneries_et"
            style="@style/EditTextStyle"
            android:layout_below="@+id/time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
           android:width="30dp"
            android:hint="Questioneris" >
        </EditText>
</RelativeLayout>
<RelativeLayout
    
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="05dp"
        android:visibility="visible" >
        <Button
            android:id="@+id/button_change_order"
            style="@style/actionbutton_style_changeorder"
            
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:layout_marginTop="10dp"
            android:text="@string/changeorder" />

        <Button
            android:id="@+id/button_confirm_order"
            style="@style/actionbutton_style"
            android:layout_below="@+id/button_change_order"
            android:layout_marginLeft="05dp"
            android:layout_marginRight="05dp"
            android:layout_marginTop="10dp"
            android:text="@string/confirmorder" />
    </RelativeLayout>

</LinearLayout>